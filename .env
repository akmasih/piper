# File: .env - /root/piper/.env
# Environment configuration for Piper TTS service with multi-voice support

# Server Configuration
SERVER_NAME=piper
TAILSCALE_IP=100.109.226.109
PORT=8000

# Backend Server (set to AI server IP - only this IP is allowed to connect)
BACKEND_IP=100.105.173.38

# Audio Configuration
DEFAULT_SAMPLE_RATE=22050
MAX_TEXT_LENGTH=5000
OUTPUT_FORMAT=mp3
MP3_BITRATE=128k

# Voice Configuration
# Quality preference order when auto-selecting voice
QUALITY_PREFERENCE=high,medium,low,x_low

# Default voice settings (used when not specified in request)
DEFAULT_LANGUAGE=en
DEFAULT_REGION=US
DEFAULT_VOICE=lessac
DEFAULT_QUALITY=high

# Models Directory
MODELS_DIR=/app/models

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
WORKER_THREADS=4

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Temporary Directory
TEMP_DIR=/tmp/piper

# Rate Limiting (requests per minute from backend)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=100

# Monitoring Configuration (centralized logging and metrics)
MONITORING_ENABLED=true
LOG_SERVER_IP=100.122.6.31
LOKI_URL=http://100.122.6.31:3100
PROMETHEUS_URL=http://100.122.6.31:9090